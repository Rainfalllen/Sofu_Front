{
  "package": "com.application.demo",
  "name": "sofu_front",
  "versionName": "1.0.0",
  "versionCode": "1",
  "minPlatformVersion": "1020",
  "icon": "/Common/logo.jpg",
  "features": [
    { "name": "system.prompt" },
    { "name": "system.router" },
    { "name": "system.shortcut" }
  ],
  "permissions": [
    { "origin": "*" }
  ],
  "config": {
    "logLevel": "off",
    "designWidth": 640
  },
  "router": {
    "entry": "Index",
    "pages": {
      "Index": {
        "component": "index"
      },
      "Login": {
        "component": "login"
      },
      "Register": {
        "component": "register"
      }
    },
    "widgets": {
      "CardDemo": {
        "name": "CardDemo",
        "description": "快应用卡片展示",
        "component": "index",
        "path": "/CardDemo",
        "features": []
      }
    }
  },
  "display": {
    "titleBarBackgroundColor": "#f2f2f2",
    "titleBarTextColor": "#414141",
    "menu": true,
    "pages": {
      "Index": {
        "titleBarText": "Sofu",
        "menu": false
      },
      "Login": {
        "titleBarText": "登录",
        "menu": false
      },
      "Register": {
        "titleBarText": "注册",
        "menu": false
      }
    }
  }
}